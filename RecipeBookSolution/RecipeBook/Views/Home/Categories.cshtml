@model List<RecipeBook.Models.DatabaseModels.Category>
@{
    ViewData["Title"] = "Categories";
}

<div>


    <h3>Kategorie receptů</h3>


    <div>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="/home/recipelist/@item.Id">@item.Name</a>
                </li>
            }
        </ul>
    </div>
</div>